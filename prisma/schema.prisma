generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())
  name String
  email String @unique
  password String?
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt

  session Session[]
  input Input[]
  result Result[]

}

model Session {
  id String @id @default(cuid())
  expires DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user User @relation(fields: [userId], references: [id])
}

model Input {
  id String @id @default(cuid())
  context String
  foods Json
  createdAt DateTime @default(now())

  userId String
  user User @relation(fields: [userId], references: [id])

  result Result?
}

model Result {
  id String @id @default(cuid())
  totalNutrition Json
  nutritions Json
  insight String
  recommendations Json
  createdAt DateTime @default(now())

  userId String
  user User @relation(fields: [userId], references: [id])
  inputId String @unique
  input Input @relation(fields: [inputId], references: [id])
}
